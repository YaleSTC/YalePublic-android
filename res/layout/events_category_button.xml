<?xml version="1.0" encoding="utf-8"?>
<!-- Created by Stan Swidwinski
   General layout for the buttons within the category menu in the events functionality. 
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/categoryRectangle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        style="@style/imageViewInList"
        />

    <TextView
        android:id="@+id/categoryName"
        android:layout_toEndOf="@+id/categoryRectangle"
        android:layout_toRightOf="@+id/categoryRectangle"
        style="@style/textViewInListBig"/>
</RelativeLayout>
